#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

PROGRAM=$(basename "${0}")
PIPE=$(mktemp -u)

usage() {
  cat<<EOF
Usage: ${PROGRAM} [-h] <args>...

Compile SSH configuration from the following locations:

  ~/.ssh/config.d/*
  ~/.ssh/config

and launch an SSH session. Pass all arguments except \`-h\` to OpenSSH.
EOF
}

cleanup() {
  rm -f "${PIPE}"
}

mkconfig() {
  mkfifo "${PIPE}"
  cat ~/.ssh/config.d/* ~/.ssh/config > "${PIPE}" &
}

main() {
  local arg1=${1:-}
  if [[ $arg1 == '-h' ]]; then
    usage
    return
  fi
  mkconfig
  # shellcheck disable=SC2029
  /usr/bin/ssh -F "${PIPE}" "${@}"
}

trap cleanup EXIT

main "${@}"
